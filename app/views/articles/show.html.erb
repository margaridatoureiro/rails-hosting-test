<p style="color: green"><%= notice %></p>

<%= render @article %>

<% if @article.photo.attached? %>
  <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @article.photo.key, height: 300, crop: :fill %>')"
>
  <h1>Cool article</h1>
</div>

<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", root_path %>

  <%= button_to "Destroy this article", @article, method: :delete %>
</div>
